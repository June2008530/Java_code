class Solution {
    public int climbStairs(int n) {
        if(n <= 1){
            return 1;
        }
        
        int oneStep = 1;
        int twoStep = 1;
        int ans = 0;
        
        for(int i = 2; i <= n; i++){
            ans = oneStep + twoStep;
            twoStep = oneStep;
            oneStep = ans;
        }
        
        return ans;
    }
}
